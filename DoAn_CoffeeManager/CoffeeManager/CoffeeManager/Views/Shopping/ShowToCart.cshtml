@model CoffeeManager.Models.Cart

@{
    ViewBag.Title = "ShowToCart";
    Layout = "~/Views/Shared/_MasterLayoutProduct.cshtml";
}

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                double total = Convert.ToDouble(((uint)item._shopping_product.price) * item._shopping_quantity);
                <tr>
                    <td>
                        @Html.DisplayFor(model => item._shopping_product.name_product)
                    </td>
                    <td>
                        <img src="@Url.Content(item._shopping_product.Images)" style="width:100px" ; height:100px; />
                    </td>
                    <td>
                        @Html.DisplayFor(model => item._shopping_product.price)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item._shopping_quantity)
                    </td>
                    <td>
                        Total: @total
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

