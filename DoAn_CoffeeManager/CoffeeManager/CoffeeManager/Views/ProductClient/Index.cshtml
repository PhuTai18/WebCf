@model IEnumerable <CoffeeManager.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayoutProduct.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<h2 style="text-align:center">Menu Sản Phẩm</h2>
<div class="container-fluid">
    <div class="row">
        @foreach(var pro in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="div-img-client">
                    <img src="@Url.Content(pro.Images)" height="150" width="150" />
                </div>
                <div class="div-des-client">
                    <p>@Html.DisplayFor(model => pro.name_product)</p>
                    <p>@Html.DisplayFor(model => pro.price)</p>
                    <a href="/Shopping/AddtoCard/@pro.id_product">
                    <img src="~/Content/image/icons8-buy-30.png"/>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
